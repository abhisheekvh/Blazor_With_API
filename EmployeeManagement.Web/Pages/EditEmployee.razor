@page "/editemployee/{id}"

@inherits EditEmployeebase;


<EditForm Model="@employee">
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row">
        <DataAnnotationsValidator/>
        <label for="firstname" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstname" class="form-control" placeholder="First Name" @bind-Value="employee.FirstName"></InputText>
        </div>
        <div>
            <ValidationMessage For="@(()=>employee.FirstName)"></ValidationMessage>

        </div>
    </div>
    <div class="form-group row">
        <label for="lastname" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastname" class="form-control" placeholder="Last Name" @bind-Value="employee.LastName"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="employee.Email"></InputText>
        </div>
        <div>
            <ValidationMessage For="@(()=>employee.Email)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <CustomeInputSelect id="department" @bind-Value="employee.DepartmentId" class="form-control">
                @foreach (var dep in lstDepartment)
                {
                    <option value="@dep.DepartmentId">@dep.Departmentname</option>
                }
            </CustomeInputSelect>
        </div>
    </div>

    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="employee.Gender" class="form-control">
                @foreach (var gen in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gen">@gen</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="dob" class="col-sm-2 col-form-label">
            Date of birth
        </label>
        <div class="col-sm-10">
           <InputDate @bind-Value="employee.DateOfBirth" class="form-control">

           </InputDate>
        </div>
    </div>

</EditForm>

